{
  "manifest_version": 3,
  "name": "Help me out",
  "version": "1.0",
  "description": "Record your screen and camera with one click. Share that content in an instant with a link.",
  "permissions": [
    "desktopCapture",
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "icons": {
    "48": "icon.png"
  }
}
