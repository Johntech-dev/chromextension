{
  "manifest_version": 3,
  "name": "Help me out",
  "version": "1.0",
  "description": "Record your screen and camera with one click. Share that content in an instant with a link.",
  "permissions": [
    "desktopCapture",
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "48": "icon.png"
    },
    "default_title": "HelpMeOut,"
  },
  "icons": {
    "48": "icon.png"
  }
}
